{
  "manifest_version": 2,
  "name": "SideAI",
  "version": "0.1.0",
  "description": "Minimal sidebar AI chat for OpenAI-compatible APIs.",
  "permissions": ["storage", "<all_urls>"],
  "sidebar_action": {
    "default_title": "SideAI",
    "default_panel": "panel.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sideai@local",
      "strict_min_version": "109.0"
    }
  }
}
